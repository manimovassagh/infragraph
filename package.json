{
  "name": "awsarchitect",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0 WITH Commons-Clause",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/backend\" \"npm run dev --workspace=apps/frontend\"",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=apps/backend && npm run build --workspace=apps/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run build --workspace=packages/shared && tsc --noEmit -p apps/backend/tsconfig.json",
    "test": "npx tsx apps/backend/src/scripts/test-parse.ts",
    "test:unit": "vitest run --coverage --exclude 'e2e/**'",
    "test:unit:watch": "vitest",
    "test:e2e": "cd e2e && npx playwright test",
    "test:e2e:ui": "cd e2e && npx playwright test --ui",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "semantic-release": "^25.0.3",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
